@model IEnumerable<NET_Midterm2025.Controllers.NxbViewModel>

@{
    ViewData["Title"] = "DANH SÁCH NHÀ XUẤT BẢN";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Mã NXB</th>
            <th>Tên NXB</th>
            <th>Số lượng sách</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MaNxb)</td>
                <td>@Html.DisplayFor(modelItem => item.TenNxb)</td>
                <td>@Html.DisplayFor(modelItem => item.SoLuongSach)</td>
            </tr>
        }
    </tbody>
</table>
<style>
    .table {
        width: 100%;
        margin-top: 20px;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    h1 {
        color: #007bff;
        margin-bottom: 20px;
    }
</style>