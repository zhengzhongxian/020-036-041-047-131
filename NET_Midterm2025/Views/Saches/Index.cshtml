@model IEnumerable<NET_Midterm2025.Models.Sach>

@{
    ViewData["Title"] = "Book Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary">Book Management</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add New Book
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Book List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Cover</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>ISBN</th>
                            <th>Year</th>
                            <th>Value</th>
                            <th>Publisher</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.AnhBia))
                                    {
                                        <img src="@item.AnhBia" alt="Book cover" class="img-thumbnail" style="width: 60px; height: 80px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="no-cover" style="width: 60px; height: 80px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-book text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.TenSach)</td>
                                <td>@Html.DisplayFor(modelItem => item.TacGia)</td>
                                <td>@Html.DisplayFor(modelItem => item.Isbn)</td>
                                <td>@Html.DisplayFor(modelItem => item.NamXuatBan)</td>
                                <td>@Html.DisplayFor(modelItem => item.TriGia)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaNxbNavigation.TenNxb)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.MaSach" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.MaSach" class="btn btn-sm btn-info" title="Details">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MaSach" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .table th {
            white-space: nowrap;
        }

        .no-cover {
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
        }

        .btn-group .btn {
            padding: 0.25rem 0.5rem;
        }

        .card {
            border-radius: 0.35rem;
            border: none;
        }

        .card-header {
            border-radius: 0.35rem 0.35rem 0 0 !important;
        }
    </style>
}