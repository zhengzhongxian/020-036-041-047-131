@model NET_Midterm2025.Models.Sach

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h1 class="card-title mb-0">Book Details</h1>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Book Cover Column -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.AnhBia))
                    {
                        <img src="@Model.AnhBia" alt="Book Cover" class="img-fluid rounded shadow mb-3" style="max-height: 400px;">
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px; width: 100%;">
                            <span class="text-muted">No cover image</span>
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-block mt-3">
                        <a asp-action="Edit" asp-route-id="@Model?.MaSach" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>

                <!-- Book Details Column -->
                <div class="col-md-8">
                    <h2 class="text-primary mb-3">@Model.TenSach</h2>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-subtitle text-muted">Author</h5>
                                    <p class="card-text fs-5">@Model.TacGia</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-subtitle text-muted">Publisher</h5>
                                    <p class="card-text fs-5">@Model.MaNxbNavigation?.TenNxb</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-subtitle text-muted">Published Year</h5>
                                    <p class="card-text fs-5">@Model.NamXuatBan</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-subtitle text-muted">Value</h5>
                                    <p class="card-text fs-5">@Model.TriGia.ToString("C")</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-subtitle text-muted">ISBN</h5>
                                    <p class="card-text fs-5">@Model.Isbn</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-subtitle text-muted">Acquisition Date</h5>
                                    <p class="card-text fs-5">@Model.NgayNhap.ToShortDateString()</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .img-fluid {
            max-width: 100%;
            height: auto;
            object-fit: cover;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}
