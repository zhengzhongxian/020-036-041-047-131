@model NET_Midterm2025.Models.Sach

@{
    ViewData["Title"] = "Xóa Sách";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>XÁC NHẬN XÓA SÁCH</h3>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Cảnh báo!</h4>
                <p class="mb-0">Bạn đang chuẩn bị xóa vĩnh viễn thông tin sách này. Hành động này không thể hoàn tác.</p>
            </div>

            <div class="row">
                <!-- Cột thông tin cơ bản -->
                <div class="col-md-6">
                    <div class="info-section mb-4">
                        <h5 class="section-title"><i class="fas fa-info-circle me-2"></i>Thông tin cơ bản</h5>
                        <div class="info-item">
                            <span class="info-label">Tên sách:</span>
                            <span class="info-value">@Model.TenSach</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Tác giả:</span>
                            <span class="info-value">@Model.TacGia</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">ISBN:</span>
                            <span class="info-value">@Model.Isbn</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Năm xuất bản:</span>
                            <span class="info-value">@Model.NamXuatBan</span>
                        </div>
                    </div>
                </div>

                <!-- Cột thông tin bổ sung -->
                <div class="col-md-6">
                    <div class="info-section mb-4">
                        <h5 class="section-title"><i class="fas fa-ellipsis-h me-2"></i>Thông tin bổ sung</h5>
                        <div class="info-item">
                            <span class="info-label">Trị giá:</span>
                            <span class="info-value">@Model.TriGia.ToString("N0") VNĐ</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Ngày nhập:</span>
                            <span class="info-value">@Model.NgayNhap.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Nhà xuất bản:</span>
                            <span class="info-value">@Model.MaNxbNavigation?.TenNxb</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ảnh bìa sách -->
            @if (!string.IsNullOrEmpty(Model.AnhBia))
            {
                <div class="text-center mt-3">
                    <img src="@Model.AnhBia" alt="Ảnh bìa sách" class="img-thumbnail book-cover" style="max-width: 200px;">
                    <p class="text-muted mt-2">Ảnh bìa sách</p>
                </div>
            }

            <!-- Form xác nhận xóa -->
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="MaSach" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash-alt me-2"></i> XÓA VĨNH VIỄN
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            border: none;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
            padding: 1rem 1.5rem;
        }

        .info-section {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
        }

        .section-title {
            color: #495057;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }

        .info-item {
            display: flex;
            margin-bottom: 0.8rem;
        }

        .info-label {
            font-weight: 600;
            color: #343a40;
            min-width: 120px;
        }

        .info-value {
            color: #6c757d;
        }

        .book-cover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            transition: transform 0.3s;
        }

            .book-cover:hover {
                transform: scale(1.05);
            }

        .btn-lg {
            padding: 0.5rem 1.75rem;
            font-size: 1.1rem;
        }
    </style>
}

@section Scripts {
    <script>
        // Thêm hiệu ứng khi di chuột qua nút xóa
        document.querySelector('.btn-danger').addEventListener('mouseover', function() {
            this.innerHTML = '<i class="fas fa-skull-crossbones me-2"></i> XÓA VĨNH VIỄN';
        });
        document.querySelector('.btn-danger').addEventListener('mouseout', function() {
            this.innerHTML = '<i class="fas fa-trash-alt me-2"></i> XÓA VĨNH VIỄN';
        });
    </script>
}