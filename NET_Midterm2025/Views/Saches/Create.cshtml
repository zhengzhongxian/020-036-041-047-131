@model NET_Midterm2025.Models.DTOs.SachCreateDTO

@{
    ViewData["Title"] = "Thêm Sách Mới";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-book-medical me-2"></i>THÊM SÁCH MỚI</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <!-- Cột 1 -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="TenSach" class="form-control" placeholder=" " required />
                            <label asp-for="TenSach" class="form-label"></label>
                            <span asp-validation-for="TenSach" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="TacGia" class="form-control" placeholder=" " />
                            <label asp-for="TacGia" class="form-label"></label>
                            <span asp-validation-for="TacGia" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Isbn" class="form-control" placeholder=" " />
                            <label asp-for="Isbn" class="form-label"></label>
                            <span asp-validation-for="Isbn" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AnhBia" class="form-label">Ảnh bìa (URL)</label>
                            <input asp-for="AnhBia" type="url" class="form-control" placeholder="https://example.com/image.jpg" />
                            <small class="text-muted">Nhập URL ảnh bìa sách</small>
                            <span asp-validation-for="AnhBia" class="text-danger small d-block"></span>
                        </div>

                    <!-- Cột 2 -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NamXuatBan" class="form-control" placeholder=" " type="number" min="1900" max="@DateTime.Now.Year" />
                            <label asp-for="NamXuatBan" class="form-label"></label>
                            <span asp-validation-for="NamXuatBan" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="MaNxb" class="form-select" asp-items="ViewBag.MaNxb">
                                <option value="">-- Chọn nhà xuất bản --</option>
                            </select>
                            <label asp-for="MaNxb" class="form-label"></label>
                            <span asp-validation-for="MaNxb" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="TriGia" class="form-control" placeholder=" " type="number" step="1000" min="0" />
                            <label asp-for="TriGia" class="form-label"></label>
                            <span asp-validation-for="TriGia" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Lưu thông tin
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            overflow: hidden;
        }

        .form-floating > label {
            padding: 0.5rem 0.75rem;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            padding: 0.5rem 0.75rem;
        }

        .btn {
            border-radius: 0.375rem;
            padding: 0.5rem 1.25rem;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Kích hoạt validation form Bootstrap
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}